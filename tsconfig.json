{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2015", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src"]
}
